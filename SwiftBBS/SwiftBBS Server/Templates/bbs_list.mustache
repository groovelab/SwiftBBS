{{> common_header}}

<div class="container theme-showcase" role="main">

    <div class="page-header">
        <h1>bbs list&nbsp;&nbsp;&nbsp;<a href="#create-form" class="btn btn-primary btn-sm" role="button">Create new BBS</a></h1>
    </div>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>bbs title</th>
                        <th>user</th>
                        <th>comment</th>
                        <th>posted date</th>
                    </tr>
                </thead>
                <tbody>
                {{#bbsList}}
                    <tr>
                        <td><a href="/bbs/detail/{{id}}">{{title}}</a></td>
                        <td>{{userName}}</td>
                        <td>{{{comment}}}</td>
                        <td>{{createdAt}}</td>
                    </tr>
                {{/bbsList}}
                </tbody>
            </table>
        </div>
    </div>

{{> bbs_pager}}

    <div class="page-header">
        <h1>create bbs form</h1>
    </div>

    <form action="/bbs/add" method="post" enctype="multipart/form-data" id="create-form" name="create-form">
        <div class="form-group">
            <label for="title">title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="">
        </div>
        <div class="form-group">
            <label for="comment">comment</label>
            <textarea name="comment" id="comment" class="form-control" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="exampleInputFile">Image (optional)</label>
            <input type="file" id="image" name="image">
            <p class="help-block">select image, if you want to add image</p>
        </div>
        <button type="submit" class="btn btn-default">create bbs</button>
    </form>

</div>

{{> common_footer}}